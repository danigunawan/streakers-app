<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><h3><%= activity.title %></h3></td>
        <td><%= link_to 'Show Streaks', activity, class: "btn btn-lg btn-primary btn-block" %></td>
        <td><%= link_to 'Start A Streak', new_activity_streak_path(activity), class: "btn btn-lg btn-success btn-block" %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity), class: "btn btn-lg btn-warning btn-block" %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-danger btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path, class: "btn btn-lg btn-primary btn-block" %>
