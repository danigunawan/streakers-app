<p id="notice"><%= notice %></p>
<h1>
  <%= @streak.activity.title %>
</h1>
<p>
  <strong>Current streak:</strong>
  <%= @streak.current_streak %>
</p>
<p>
  <strong>Start date:</strong>
  <%= @streak.start_date %>
</p>
<p>
  <strong>End date:</strong>
  <%= @streak.end_date %>
</p>

<%= render "streak_chart" %>

<%= link_to 'Edit', edit_activity_streak_path(@streak), class: "btn btn-lg btn-primary btn-block" %> <br>
<%= link_to 'Back', activity_streaks_path, class: "btn btn-lg btn-secondary btn-block" %>
